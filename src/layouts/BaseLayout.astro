---
import Footer from "../components/Footer.astro";
import MainHead from "../components/MainHead.astro";
import "../styles/globals.css";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body>
    <div class="main-layout">
      <main>
        <header class="fixed-item"></header>
        <section class="main-section">
          <slot />
        </section>
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  .main-layout {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: var(--neutral-dark);
    color: var(--neutral-light);
  }
  main {
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-block: 5rem;
  }
  main::before,
  main::after {
    display: none;
    content: "";
    position: absolute;
    top: 0;
    width: 1px;
    height: 100vh;
    background-color: var(--neutral-grey);
    z-index: 50;
  }

  main::before {
    left: 10%;
  }
  main::after {
    right: 10%;
  }

  header {
    top: 0;
    border-bottom: 1px solid var(--neutral-light);
  }

  header::before,
  header::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: -1px;
    width: 85px;
    height: 2px;
    background-image: linear-gradient(var(--neutral-gradient));
    filter: blur(1px);
    animation: lightningBorderToRight 8s linear infinite;
  }
  .main-section {
    width: 100%;
    height: 100%;
    padding-block: 2.5rem;
  }

  @media (width >= 48rem) {
    main::before,
    main::after {
      display: flex;
    }
  }

  @media (width >= 64rem) {
    main::before {
      left: 15%;
    }
    main::after {
      right: 15%;
    }
  }

  @media (width >= 80rem) {
    header {
      height: 5rem;
    }
  }

  @keyframes lightningBorderToRight {
    0% {
      left: -150px;
    }
    50% {
      left: 50%;
    }
    100% {
      left: 110%;
    }
  }
</style>
